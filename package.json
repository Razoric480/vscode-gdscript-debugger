{
    "name": "godot-debugger",
    "displayName": "Godot Debugger",
    "version": "1.0.0",
    "publisher": "Razoric",
    "description": "Provides a debugging adapter for Godot's remote debugger",
    "author": {
        "name": "Razoric",
        "email": "razoric480@gmail.com",
        "url": "https://razori.ca"
    },
    "license": "MIT",
    "keywords": [
        "gdscript",
        "godot",
        "debug"
    ],
    "icon": "icon.png",
    "repository": {
        "type": "git",
        "url": "https://github.com/Razoric480/vscode-gdscript-debugger.git"
    },
    "bugs": {
        "url": "https://github.com/Razoric480/vscode-gdscript-debugger/issues"
    },
    "engines": {
        "vscode": "^1.42.0"
    },
    "categories": [
        "Debuggers"
    ],
    "activationEvents": [
        "onDebug"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "debuggers": [
            {
                "type": "godot",
                "label": "Godot Debug",
                "program": "./out/debugAdapter.js",
                "runtime": "node",
                "configurationAttributes": {
                    "launch": {
                        "required": [
                            "project",
                            "port",
                            "address"
                        ],
                        "properties": {
                            "project": {
                                "type": "string",
                                "description": "Absolute path to a directory with a project.godot file.",
                                "default": "${workspaceFolder}"
                            },
                            "port": {
                                "type": "number",
                                "description": "The port number for the Godot remote debugger to use.",
                                "default": 6007
                            },
                            "address": {
                                "type": "string",
                                "description": "The IP address for the Godot remote debugger to use.",
                                "default": "127.0.0.1"
                            }
                        }
                    }
                },
                "initialConfigurations": [
                    {
                        "name": "Godot",
                        "type": "godot",
                        "request": "launch",
                        "project": "${workspaceFolder}",
                        "port": 6007,
                        "address": "127.0.0.1"
                    }
                ],
                "configurationSnippets": [
                    {
                        "label": "Godot Debug: Launch",
                        "description": "A new configuration for debugging a Godot project.",
                        "body": {
                            "type": "godot",
                            "request": "launch",
                            "project": "${workspaceFolder}",
                            "port": 6007,
                            "address": "127.0.0.1"
                        }
                    }
                ]
            }
        ],
        "breakpoints": [
            {
                "language": "gdscript"
            }
        ],
        "languages": [
            {
                "id": "gdscript",
                "aliases": [
                    "GDScript",
                    "gdscript"
                ],
                "configuration": "./gdscript-configuration.json",
                "extensions": [
                    ".gd"
                ]
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "lint": "eslint src --ext ts",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^7.1.1",
        "@types/mocha": "^7.0.1",
        "@types/node": "^12.11.7",
        "@types/vscode": "^1.42.0",
        "eslint": "^6.8.0",
        "@typescript-eslint/parser": "^2.18.0",
        "@typescript-eslint/eslint-plugin": "^2.18.0",
        "glob": "^7.1.6",
        "mocha": "^7.0.1",
        "typescript": "^3.7.5",
        "vscode-test": "^1.3.0"
    },
    "dependencies": {
        "await-notify": "^1.0.1",
        "terminate": "^2.1.2",
        "vscode-debugadapter": "^1.38.0"
    }
}
